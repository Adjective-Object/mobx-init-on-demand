{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "module": "es2015",
        "target": "es2015",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strict": true,
        "experimentalDecorators": true
    },
    "include": ["src", "integration-test/mobx-shim"],
    "exclude": ["node_modules", "build", "scripts"]
}
