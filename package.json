{
    "name": "mobx-init-on-demand",
    "version": "0.0.8-alpha.1",
    "author": "Max Huang-Hobbs <mhuan13@gmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "repository": "github:Adjective-Object/mobx-init-on-demand",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -cw",
        "format": "prettier --write './src/**.ts'",
        "test": "yarn test:scripts && yarn test:integration",
        "test:scripts": "jest",
        "test:integration": "./integration-test/scripts/run-all-tests.sh"
    },
    "dependencies": {
        "mobx": "^5.15.1"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/mz": "^0.0.32",
        "@types/node": "^12.6.8",
        "jest": "^24.9.0",
        "mz": "^2.7.0",
        "prettier": "^1.19.1",
        "rollup": "^1.17.0",
        "rollup-plugin-copy": "^3.3.0",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-terser": "^5.2.0",
        "rollup-plugin-typescript2": "^0.22.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.7.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "src.*(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
